{
  "name": "cronnouncer",
  "version": "1.0.0",
  "description": "Discord bot for scheduled announcements",
  "main": "build/index.js",
  "scripts": {
    "start": "NODE_ENV=production node build/index.js",
    "dev": "ts-node-dev src/index.ts",
    "build": "tsc --build tsconfig.prod.json",
    "build:dryrun": "tsc -p tsconfig.prod.json --noEmit",
    "test": "NODE_ENV=test ava --verbose",
    "lint": "eslint 'src/*/**/*.{js,ts,tsx}'",
    "prcheck": "npm run lint && npm run test && npm run build:dryrun"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amanzanero/cronnouncer.git"
  },
  "author": "Estrella Bois",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/amanzanero/cronnouncer/issues"
  },
  "homepage": "https://github.com/amanzanero/cronnouncer#readme",
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "@types/node": "^14.14.10",
    "@types/sinon": "^9.0.9",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "ava": "^3.14.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.2.0",
    "prettier": "^2.2.1",
    "sinon": "^9.2.1",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "discord.js": "^12.5.1",
    "dotenv": "^8.2.0",
    "winston": "^3.3.3"
  }
}
